#!/usr/bin/env node

const http = require('http');

let app = require('../app');

// catch 404 and render a not-found.hbs template
app.use((req, res, next) => {
  res.status(404);
  res.render('not-found');
});

app.use((err, req, res, next) => {
  // always log the error
  console.error('ERROR', req.method, req.path, err);

  // only render if the error ocurred before sending the response
  if (!res.headersSent) {
    res.status(500);
    res.render('error');
  }
});

let server = http.createServer(app);

server.on('error', error => {
  if (error.syscall !== 'listen') { throw error }

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(`Port ${process.env.PORT} requires elevated privileges`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(`Port ${process.env.PORT} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
});

const socketio = require('socket.io');

const io = socketio(server, {
  cors: {
    origin: '*',
  }
});

let monopolyPlayers =[];
let hasBegun = false;

io.on('connection', socket => {
  console.log("hay cerdos en el matadero")

  socket.on('connectedMonopoly', (username) => {
    console.log(username, 'connected');
    //Comprobamos si el usuario es el único player, para hacerlo líder de la partida.
    if(monopolyPlayers.length === 0) { 
      monopolyPlayers = [...monopolyPlayers, {username:username, host: true, socketId: socket.id}];
      host = true;
    } else {
      monopolyPlayers = [...monopolyPlayers, {username:username, host: false, socketId: socket.id}];
      host = false;
    }
    console.log("jugadores actuales", monopolyPlayers)
    io.emit("someoneMonopoly", monopolyPlayers);
  })

  socket.on('hasBegun', () => {
    io.emit("matchStarted", hasBegun);
  })

  socket.on('messageMonopoly', (username, message) => {
    console.log("message arrived", message)
    io.emit("displayMessageMonopoly", {username, message});
  })

  socket.on('joinedLobby', (username) => {
    console.log(username, "que tenemos en el back")
    io.emit("updateUsers", roomId, room.currentUsers);
  })

  socket.on('someoneLeftMonopoly', (username) => {
    console.log("alguien se fue del monopoly", username);
    let playerIndex = monopolyPlayers.findIndex((obj) => {
      return obj.username == username;
    });
    playerIndex !== -1 ? monopolyPlayers.splice(playerIndex, 1) : '';
    console.log("esto es lo que queda", monopolyPlayers)
    //Checkeando si sigue habiendo host
    if (monopolyPlayers.filter(e => e.host === true).length === 0) {
      //No hay host, seleccionamos uno nuevo
      console.log("No hay host >", monopolyPlayers.length);
      monopolyPlayers.length > 0 ? monopolyPlayers[0].host = true : '';
      console.log("después de irse la peñusqui", monopolyPlayers)

    }
    io.emit("someoneMonopoly", monopolyPlayers);
  })

  socket.on('kickPlayerMonopoly', (username) => {
    console.log("alguien fue kickeado", username);
    let playerIndex = monopolyPlayers.findIndex((obj) => {
      return obj.username == username;
    });
    playerIndex !== -1 ? monopolyPlayers.splice(playerIndex, 1) : '';
    io.emit("youBeenKickedMonopoly", username);
    io.emit("someoneMonopoly", monopolyPlayers);
  })

  socket.on('newMessageMonopoly', (username, message, color) => {
    io.emit("updateMessagesMonopoly", username, message, color);
  })

  socket.on('disconnect', () => {
    console.log("alguien se fue", socket.id);
    let playerIndex = monopolyPlayers.findIndex((obj) => {
      return obj.socketId == socket.id;
    });
    playerIndex !== -1 ? monopolyPlayers.splice(playerIndex, 1) : '';
    console.log("esto es lo que queda", monopolyPlayers)
    //Checkeando si sigue habiendo host
    if (monopolyPlayers.filter(e => e.host === true).length === 0) {
      //No hay host, seleccionamos uno nuevo
      console.log("No hay host >", monopolyPlayers.length);
      monopolyPlayers.length > 0 ? monopolyPlayers[0].host = true : '';
      console.log("después de irse la peñusqui", monopolyPlayers)

    }
    io.emit("someoneMonopoly", monopolyPlayers);
  })
})

server.listen(process.env.PORT, () => {
  console.log(`Listening on http://localhost:${process.env.PORT}`);
});
